@model IEnumerable<tasklinq.Models.Teacher>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using(Html.BeginForm("Index","Home",FormMethod.Post))
            {
                <div class="col-md-6">
                    <input type="text" name="Searchtxt" class="form-control" placeholder="search your text here" />
                </div>
                <div class="col-md-2">
                    <button type="submit" value="search">
                        Search
                    </button>
                </div>
            }




</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qualification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NatureOfAppointment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearofAppointment)
        </th>
