            @Html.DisplayNameFor(model => model.PanCardNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qualification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NatureOfAppointment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearofAppointment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Award)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PanCardNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
